<h1>Sign In</h1>

<%= form_with url: login_path do |f| %>
     <div class="mb-3 mt-5">
        <%= f.label :email %>
        <%= f.text_field :email , class: "form-control", placeholder: "name@example.com"%>
    </div>
    <div class="mb-3">
        <%= f.label :password %>
        <%= f.password_field :password , class: "form-control"%>
    </div>

    <div class="d-flex justify-content-end">
        <%= link_to  "Forgot Password?", password_reset_path, class: "nav-link" %>
    </div>

    <div class="mb-3">
        <%= f.submit "Login", class:"btn btn-primary"%>
    </div>
<% end %>

<div class="d-flex align-items-center justify-content-between py-5 px-3 border rounded border-primary my-4">
    <h1>Scheduled Tweets</h1>
    
    <% if Current.user.twitter_accounts.any? %>
        <%= link_to  "Add Tweet", new_tweet_path, class: "btn btn-primary" %>
    <% end %>
</div>


<div class="d-flex flex-column align-items-center justify-content-center">
<% if Current.user.twitter_accounts.none? %>
    <p class="fst-italic">You haven't linked your twitter account</p>
    <%= button_to "Connect a Twitter Account", "/auth/twitter", method: :post, data: {turbo: "false"}, class: "btn btn-primary" %>
<% end %>
</div>

<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab" aria-controls="all" aria-selected="true">All</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="published-tab" data-bs-toggle="tab" data-bs-target="#published" type="button" role="tab" aria-controls="published" aria-selected="false">Published</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="unpublished-tab" data-bs-toggle="tab" data-bs-target="#unpublished" type="button" role="tab" aria-controls="unpublished" aria-selected="false">Unpublished</button>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active mt-3" id="all" role="tabpanel" aria-labelledby="all-tab"><%= render @tweets %></div>
  <div class="tab-pane fade mt-3" id="published" role="tabpanel" aria-labelledby="published-tab"><%= render @published_tweets %></div>
  <div class="tab-pane fade mt-3" id="unpublished" role="tabpanel" aria-labelledby="unpublished-tab"><%= render @unpublished_tweets %></div>
</div>


<div class="d-flex align-items-center justify-content-between py-5 px-3 border rounded border-primary my-4">
    <h1>Schedule a Tweets</h1>
</div>

<div class="d-flex flex-column p-3 border rounded my-4">
    <%= form_with model: @tweet, local: true, data: { turbo: false } do |form|%>

        <%= render "shared/form_error", form: form %>
        <%= form.label :twitter_account_id, "Username" %>
        <%= form.collection_select :twitter_account_id, Current.user.twitter_accounts, :id, :username, {}, {class: "form-control my-2"} %>
        <%# <%= form.text_field :twiiter_account_id, class: "form-control my-2" %>
        
        <%# <%= link_to "Connect a Twitter Account", "/auth/twitter", method: :post, data: {turbo: "false"}, class: "btn btn-outline-primary mb-3" %>

        <%= form.label :body, "Tweets" %>
        <%= form.text_area :body, class: "form-control my-2" %>

        <%= form.label :publish_at, "Publish Datetime" %>
        <div class="form-control my-2">
            <%= form.datetime_select :publish_at %>
        </div>

        <%= form.submit "Schedule", class: "btn btn-primary mt-4 mb-2" %>
    <% end %>
</div>


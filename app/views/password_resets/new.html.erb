<h1>Forgot your Password?</h1>

<%= form_with url: password_reset_path do |f|%>
    <div class="mb-3 mt-5">
        <%= f.label :email %>
        <%= f.text_field :email , class: "form-control", placeholder: "name@example.com"%>
    </div>
    <div class="mb-3">
        <%= f.submit "Send Email", class:"btn btn-primary"%>
    </div>
<% end %>